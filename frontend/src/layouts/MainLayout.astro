---
// frontend/src/layouts/MainLayout.astro (REVISED for OutputViewer)
import '../styles/global.css';

interface Props {
    title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Oncology Phrase Processor" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
    <div class="app-container">
      <header class="header-area">
        <h1>{title}</h1>
        <div id="connection-status" class="status-indicator status-disconnected">Disconnected</div>
      </header>

      {/* TOP Row: Input and Graph */}
      <div class="content-row-wrap-top">
        <div class="input-area">
          <slot name="input" />
        </div>
        <div class="graph-area">
          <slot name="graph" />
        </div>
      </div>

      {/* BOTTOM Row: Logs and Output Viewer */}
      <div class="content-row-wrap-bottom">
        <div class="logs-area">
          <slot name="logs" />
        </div>
        <div class="output-viewer-area"> {/* Renamed class */}
          <slot name="output-viewer" /> {/* Renamed slot */}
        </div>
      </div>
    </div>
    </body>
</html>
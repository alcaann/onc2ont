---
// frontend/src/pages/index.astro (REVISED for 4 components)
import MainLayout from '../layouts/MainLayout.astro';
import InputForm from '../components/InputForm.astro';
import LogConsole from '../components/LogConsole.astro';
import GraphVisualizer from '../components/GraphVisualizer.astro';
import JsonEditor from '../components/JsonEditor.astro'; // Import new component
---
<MainLayout title="Oncology Phrase Processor">

  {/* --- Top Row --- */}
  <InputForm slot="input" />
  <GraphVisualizer slot="graph" />

  {/* --- Bottom Row --- */}
  <LogConsole slot="logs" />
  <JsonEditor slot="json-editor" /> {/* Place in new slot */}

</MainLayout>

<style is:global>
 /* Ensure slot wrappers fill their parent flex areas */
 .input-area, .graph-area, .logs-area, .json-editor-area { /* Added json-editor-area */
    display: flex;
    flex-direction: column;
    min-height: 0;
 }
</style>
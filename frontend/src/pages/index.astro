---
// frontend/src/pages/index.astro (REVISED for OutputViewer)
import MainLayout from '../layouts/MainLayout.astro';
import InputForm from '../components/InputForm.astro';
import LogConsole from '../components/LogConsole.astro';
import GraphVisualizer from '../components/GraphVisualizer.astro';
import OutputViewer from '../components/OutputViewer.astro'; // Import renamed component
---
<MainLayout title="Oncology Phrase Processor">

  {/* --- Top Row --- */}
  <InputForm slot="input" />
  <GraphVisualizer slot="graph" />

  {/* --- Bottom Row --- */}
  <LogConsole slot="logs" />
  <OutputViewer slot="output-viewer" /> {/* Use new component and slot name */}

</MainLayout>

<style is:global>
 /* Ensure slot wrappers fill their parent flex areas */
 .input-area, .graph-area, .logs-area, .output-viewer-area { /* Renamed json-editor-area */
    display: flex;
    flex-direction: column;
    min-height: 0;
 }
</style>